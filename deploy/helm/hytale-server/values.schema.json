{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "replicaCount": { "type": "integer", "minimum": 1 },
    "workload": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "kind": { "type": "string", "enum": ["StatefulSet", "Deployment"] }
      }
    },
    "image": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "repository": { "type": "string", "minLength": 1 },
        "tag": { "type": "string" },
        "pullPolicy": { "type": "string" }
      }
    },
    "service": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "nodePort": { "type": ["integer", "null"], "minimum": 1, "maximum": 65535 },
        "loadBalancerIP": { "type": "string" },
        "loadBalancerSourceRanges": { "type": "array", "items": { "type": "string" } },
        "externalTrafficPolicy": { "type": "string" }
      }
    },
    "persistence": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": { "type": "boolean" },
        "existingClaim": { "type": "string" },
        "size": { "type": "string" },
        "storageClassName": { "type": "string" }
      }
    },
    "tmp": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": { "type": "boolean" }
      }
    },
    "env": {
      "type": "object",
      "additionalProperties": { "type": ["string", "number", "boolean"] }
    },
    "secrets": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "serverAuth": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "name": { "type": "string" },
            "sessionTokenKey": { "type": "string" },
            "identityTokenKey": { "type": "string" }
          }
        },
        "curseforge": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "name": { "type": "string" },
            "apiKeyKey": { "type": "string" },
            "mountPath": { "type": "string" },
            "fileName": { "type": "string" }
          }
        },
        "downloaderCredentials": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "name": { "type": "string" },
            "credentialsKey": { "type": "string" },
            "mountPath": { "type": "string" },
            "fileName": { "type": "string" }
          }
        }
      }
    }
  }
}
